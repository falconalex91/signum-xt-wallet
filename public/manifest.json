{
  "manifest_version": 2,
  "name": "Signum Wallet XT",
  "version": "1.0.0",

  "icons": {
    "16": "misc/signum-icon-16.png",
    "19": "misc/signum-icon-19.png",
    "38": "misc/signum-icon-38.png",
    "128": "misc/signum-icon-128.png"
  },

  "description": "__MSG_appDesc__",
  "__chrome|firefox|opera__homepage_url": "https://github.com/ohager/templewallet-extension",
  "short_name": "Signum Wallet XT",

  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab",
    "http://localhost:8732/",
    "https://*.giganode.io/",
    "https://*.tzstats.com/",
    "https://api.tezos-nodes.com/",
    "https://api.better-call.dev/",
    "https://*.tzkt.io/",
    "https://api.baking-bad.org/v2/",
    "https://api.templewallet.com/",
    "https://quipuswap.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "__chrome|firefox__author": "https://signum.network",
  "__opera__developer": {
    "name": "https://signum.network"
  },

  "__firefox__applications": {
    "gecko": { "id": "{34ac229e-1cf5-4e4c-8a77-988155c4360f}" }
  },

  "__chrome__minimum_chrome_version": "49",
  "__opera__minimum_opera_version": "36",

  "default_locale": "en",

  "browser_action": {
    "__chrome|firefox|opera__default_popup": "popup.html",
    "default_icon": {
      "16": "misc/signum-icon-16.png",
      "19": "misc/signum-icon-19.png",
      "38": "misc/signum-icon-38.png",
      "128": "misc/signum-icon-128.png"
    },
    "default_title": "Signum Wallet XT",
    "__chrome|opera__chrome_style": false,
    "__firefox__browser_style": false
  },

  "__chrome|opera__options_page": "options.html",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },

  "background": {
    "scripts": ["scripts/background.js"],
    "__chrome|opera__persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://*/*"],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
